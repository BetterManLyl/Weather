<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_prepare_tenant"
        style="@style/linearLayoutStyle"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_cost_prepare_shanghu"
            style="@style/textStyle"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:hint="@string/prepay_cost_tenant"
            android:lines="1" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="当前余额："
            android:textColor="@color/color666"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_left_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:textColor="@color/color666"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@drawable/img_right_arrows" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"></View>

    <LinearLayout

        style="@style/linearLayoutStyle">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <TextView
            style="@style/textStyle"
            android:layout_marginLeft="10dp"
            android:hint="@string/prepay_money" />

        <EditText
            android:id="@+id/ed_money"
            style="@style/textStyle"
            android:layout_marginLeft="10dp"
            android:layout_weight="8"
            android:background="@null"
            android:digits="0123456789."
            android:inputType="number"
            android:maxLength="12" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_next_step"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_red_bg"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/x32" />
</LinearLayout>
